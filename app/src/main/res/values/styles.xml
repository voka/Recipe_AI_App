<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    //<style name="Theme.Dark" parent="AppTheme.NoActionBar">
    <item name="android:statusBarColor" tools:targetApi="21">@color/orange</item> <!--Status Bar의 배경색-->
    <item name="android:windowLightStatusBar" tools:targetApi="23">false</item> <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->

    <item name="toolbarStyle">@color/orange</item> <!--Toolbar 스타일-->
    <item name="actionMenuTextColor">@color/black</item> <!--액션 메뉴의 텍스트 색상-->
    <item name="colorControlNormal">@color/bg_screen1</item> <!--홈/뒤로가기 버튼의 색상-->
</style>

</resources>